{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "amount": {
            "type": "integer",
            "minimum": 1,
            "required": true
        },
        "currency": {
            "type": "string",
            "enum": [
                "USD"
            ],
            "default": "USD"
        },
        "order": {
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "type": "null"
                }
            ]
        },
        "appears_on_statement_as": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "[a-zA-Z0-9 \\.\\-]{1,18}"
                },
                {
                    "type": "null"
                }
            ]
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        },
        "meta": {
            "type": "object"
        }
    }
}
